@using ZippySip.ViewModels
@model LoginViewModel
<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow rounded-4">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <img src="/Images/ZippyZipLogo.jpg" style="width:100px; height:auto;" class="img-fluid" alt="ZippySip Logo" />
                </div>
                <h2 class="text-center mb-4  fw-bold" style="color:crimson">Welcome Back!</h2>
                <p class="text-center mb-4" style="color:darkorange;font-style: italic; font-family: 'Brush Script MT', cursive;font-size:small">Please log in to continue</p>

                <form asp-controller="Account" asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label fw-semibold">Username</label>
                        <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-semibold">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn text-white btn-lg" style="background-color:crimson">Log In</button>
                    </div>

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            Don't have an account?
                            <a asp-controller="Account" asp-action="Register" class="text-decoration-none">Register here</a>
                        </small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
